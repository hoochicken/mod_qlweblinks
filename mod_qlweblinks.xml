<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	client="site"
	method="upgrade">
	<name>qlweblinks</name>
	<author>Mareike Riegel</author>
	<creationDate>2023</creationDate>
	<copyright>ql.de</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>mareike.riegel@ql.de</authorEmail>
	<authorUrl>ql.de</authorUrl>
	<version>1.0.0</version>
	<description>MOD_QLWEBLINKS_XML_DESCRIPTION</description>
	<updateservers>
        <server type="extension" priority="1" name="qlweblinks - Updates">https://raw.githubusercontent.com/hoochicken/mod_qlform/main/_jupdate/mod_qlweblinks.xml</server>
    </updateservers>
	<files>
		<filename module="mod_qlweblinks">mod_qlweblinks.php</filename>
		<folder>_jupdate</folder>
		<folder>css</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>tmpl</folder>
		<folder>php</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>license.txt</filename>
		<filename>mod_qlweblinks.xml</filename>
	</files>
	<media folder="media" destination="mod_qlweblinks">
        <folder>css</folder>
        <folder>js</folder>
    </media>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_qlweblinks.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_qlweblinks.sys.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.mod_qlweblinks.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.mod_qlweblinks.sys.ini</language>
	</languages>
	<config>
		<fields name="params" addfieldpath="/modules/mod_qlweblinks/php/fields" addrulepath="/modules/mod_qlweblinks/php/rules">
            <fieldset name="basic">
				<field name="type" type="list">
					<option value=""> - plz choose - </option>
					<option value="single">single</option>
					<option value="all">all</option>
					<option value="by_category">by_category</option>
					<option value="category">category</option>
					<option value="category_and_its_weblinks">category_and_its_weblinks</option>
					<option value="categories">categories</option>
					<option value="categories_and_their_weblinks">categories_and_their_weblinks</option>
				</field>
            </fieldset>
			<fieldset name="weblink">
				<field name="weblink_display" type="list">
					<option value="list">list</option>
					<option value="table">table</option>
					<option value="grid">grid</option>
				</field>
				<field name="weblink_order_by" type="list">
					<option value="title">title</option>
					<option value="created_at">created_at</option>
					<option value="id">id</option>
				</field>
				<field name="weblink_order_dir" type="list">
					<option value="asc">asc</option>
					<option value="desc">desc</option>
				</field>
				<field name="weblink_display" type="radio" class="btn-group">
					<option value="title">title</option>
					<option value="title (id)">title (id)</option>
					<option value="title (id) url">title (id) url</option>
					<option value="title (id) description">description</option>
					<option value="title (id), cat_title (cat_id)">title (id), cat_title (cat_id)</option>
					<option value="title (id), cat_title (cat_id) - Hits: hits">title (id), cat_title (cat_id) - Hits: hits</option>
					<option value="image">image</option>
					<option value="image title">image title</option>
					<option value="image title (id)">image title (id)</option>
					<option value="title (id) image cat_title (cat_id) description">title (id) image cat_title (cat_id) description</option>
					<option value="title (id) image cat_title (cat_id) description url">title (id) image cat_title (cat_id) description url</option>
				</field>
				<field name="weblink_link_title" type="list" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="weblink_link_url" type="list" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="weblink_link_image" type="list" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
			<fieldset name="category">
				<field name="wcategory_display" type="list">
					<option value="list">list</option>
					<option value="table">table</option>
					<option value="grid">grid</option>
				</field>
				<field name="wcategory_order_by" type="list">
					<option value="title">title</option>
					<option value="created_at">created_at</option>
					<option value="id">id</option>
				</field>
				<field name="wcategory_order_dir" type="list">
					<option value="asc">asc</option>
					<option value="desc">desc</option>
				</field>
				<field name="wcategory_display" type="radio" class="btn-group">
					<option value="title">title</option>
					<option value="title (id)">title (id)</option>
					<option value="title (id) description">description</option>
					<option value="title (id) | Hits: hits">title (id), cat_title (cat_id) | Hits: hits</option>
					<option value="image">image</option>
					<option value="image title">image title</option>
					<option value="image title (id)">image title (id)</option>
					<option value="title (id) image description">title (id) image cat_title (cat_id) description</option>/option>
				</field>
				<field name="wcategory_link_title" type="list" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="wcategory_link_url" type="list" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="wcategory_link_image" type="list" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
